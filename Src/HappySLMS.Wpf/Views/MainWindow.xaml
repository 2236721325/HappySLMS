    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--  left navigation  -->
        <Grid Grid.Column="0">
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
