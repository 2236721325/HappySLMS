<Page
    x:Class="HappySLMS.Wpf.Views.Pages.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:HappySLMS.Wpf.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:HappySLMS.Wpf.ViewModels"
    Title="GamePage"
    d:DataContext="{d:DesignInstance Type=viewmodels:GamePageViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <hc:TransitioningContentControl>
        <Button
            Margin="32"
            Command="{Binding OpenCmdCommand}"
            Content="开始游戏" />
    </hc:TransitioningContentControl>

</Page>
